<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:gravity="center_vertical"
	android:layout_gravity="center_vertical">
	<ImageView android:src="@drawable/note" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginLeft="5dip"></ImageView>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical">
		<TextView android:id="@+id/title_text" android:textSize="23sp"
			android:textColor="#000000" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginTop="5dip"
			android:layout_marginLeft="10dip" android:text="432432"></TextView>
		<TextView android:id="@+id/date_text" android:textSize="15sp"
			android:textColor="#0033CC" android:textStyle="italic"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="right" android:layout_marginRight="15dip"
			android:text="432432"></TextView>
	</LinearLayout>
</LinearLayout>