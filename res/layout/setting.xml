<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/bg">
  <ScrollView 
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:scrollbars="none">
  	<LinearLayout
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:orientation="vertical">
   <LinearLayout 
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:orientation="vertical"
  	android:layout_marginTop="45dip"
  	android:layout_marginLeft="10dip"
  	android:layout_marginRight="10dip">
	  	<RelativeLayout 
	  		android:layout_width="fill_parent"
	  		android:layout_height="wrap_content">
		    <TextView android:id="@+id/setting_password"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:editable="true"
		    	android:focusable="true"
		    	android:singleLine="true"
		    	android:text="修改密码"
		    	android:textSize="17sp"
			    android:textColor="#000000"
			    android:paddingTop="10dip"
			    android:paddingBottom="10dip"
		    	android:paddingLeft="45dip"
		    	android:background="@drawable/ic_preference_first_selector"/>
		    <ImageView android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:src="@drawable/ic_setting_pw"
		    	android:layout_alignLeft="@id/setting_password"
		    	android:layout_centerVertical="true"
		    	android:paddingLeft="20dip"/>
		    <ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_preference_in_normal"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="15dip"/>
	    </RelativeLayout>
	    <RelativeLayout 
	  		android:layout_width="fill_parent"
	  		android:layout_height="wrap_content">
		    <TextView android:id="@+id/setting_gesture"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:editable="true"
		    	android:focusable="true"
		    	android:singleLine="true"
		    	android:text="修改手势"
		    	android:textSize="17sp"
		    	android:textColor="#000000"
		    	android:paddingLeft="45dip"
		    	android:paddingTop="10dip"
		    	android:paddingBottom="10dip"
		    	android:background="@drawable/ic_preference_selector"/>
		    <ImageView android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:src="@drawable/ic_setting_gesture"
		    	android:layout_alignLeft="@id/setting_gesture"
		    	android:layout_centerVertical="true"
		    	android:paddingLeft="20dip"/>
		    <ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_preference_in_normal"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="15dip"/>
	    </RelativeLayout>
	    <RelativeLayout 
	  		android:layout_width="fill_parent"
	  		android:layout_height="wrap_content">
		    <TextView android:id="@+id/data_back"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:editable="true"
		    	android:focusable="true"
		    	android:singleLine="true"
		    	android:text="数据恢复"
		    	android:textSize="17sp"
		    	android:textColor="#000000"
		    	android:paddingLeft="45dip"
		    	android:paddingTop="10dip"
		    	android:paddingBottom="10dip"
		    	android:background="@drawable/ic_preference_last_selector"/>
		    <ImageView android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:src="@drawable/ic_setting_gesture"
		    	android:layout_alignLeft="@id/setting_gesture"
		    	android:layout_centerVertical="true"
		    	android:paddingLeft="20dip"/>
		    <ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_preference_in_normal"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="15dip"/>
	    </RelativeLayout>
    </LinearLayout>
    
    <LinearLayout 
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:orientation="vertical"
	  	android:layout_marginTop="20dip"
	  	android:layout_marginLeft="10dip"
	  	android:layout_marginRight="10dip"
	  	android:layout_marginBottom="30dip">
	  	<RelativeLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content">
		    <TextView android:id="@+id/setting_about"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:editable="true"
		    	android:focusable="true"
		    	android:singleLine="true"
		    	android:text="关于"
		    	android:textSize="17sp"
		    	android:textColor="#000000"
		    	android:paddingTop="10dip"
		    	android:paddingBottom="10dip"
		    	android:paddingLeft="45dip"
		    	android:background="@drawable/ic_preference_first_selector"/>
		    <ImageView android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:src="@drawable/ic_guard_help"
		    	android:layout_alignLeft="@id/setting_about"
		    	android:layout_centerVertical="true"
		    	android:paddingLeft="20dip"/>
		    <ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_preference_in_normal"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="15dip"/>
    	</RelativeLayout>
    	<RelativeLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content">
		    <TextView android:id="@+id/setting_version"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:editable="true"
		    	android:focusable="true"
		    	android:singleLine="true"
		    	android:text="版本号"
		    	android:textSize="17sp"
		    	android:textColor="#000000"
		    	android:paddingLeft="45dip"
		    	android:paddingTop="10dip"
		    	android:paddingBottom="10dip"
		    	android:background="@drawable/ic_preference_selector"/>
		    <ImageView android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:src="@drawable/ic_sms_key"
		    	android:layout_alignLeft="@id/setting_version"
		    	android:layout_centerVertical="true"
		    	android:paddingLeft="20dip"/>
		    <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:hint="1.02"
				android:textColor="#000000"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="20dip"/>
    	</RelativeLayout>
    	<RelativeLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content">
		    <TextView android:id="@+id/setting_feedback"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:editable="true"
		    	android:focusable="true"
		    	android:singleLine="true"
		    	android:text="意见反馈"
		    	android:textSize="17sp"
		    	android:textColor="#000000"
		    	android:paddingLeft="45dip"
		    	android:paddingTop="10dip"
		    	android:paddingBottom="10dip"
		    	android:background="@drawable/ic_preference_last_selector"/>
		    <ImageView android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:src="@drawable/ic_guard_help"
		    	android:layout_alignLeft="@id/setting_feedback"
		    	android:layout_centerVertical="true"
		    	android:paddingLeft="20dip"/>
		    <ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_preference_in_normal"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="15dip"/>
    	</RelativeLayout>
  	</LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
